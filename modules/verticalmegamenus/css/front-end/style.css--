p.ajax-loader{
    width: 100%;
    height: 100%;    
    background-image: url("../images/loader.gif");
    background-repeat: no-repeat;
    background-position:  center center;
    position: absolute;
    top: 0px;
    left: 0px;
    z-index: 1000;    
}
.fa {
  display: inline-block;
  font-family: FontAwesome;
  font-style: normal;
  font-weight: normal;
  line-height: 1;
  -webkit-font-smoothing: antialiased;
